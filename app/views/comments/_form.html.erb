<%= form_for ([@post, @comment]) do |f| %>
    
    <%= f.label  :comment %>
    <%= f.text_area :comment, class:"form-control", placeholder: "Comment" %><br>
    <%= f.hidden_field :user_id, value: current_user.id %>
    
    <br><%= f.submit "Add Comment", class: "btn btn-outline-info" %><br>

<% end %>