<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<p>
  <strong>Start date:</strong>
  <%= @post.start_date %>
</p>

<p>
  <strong>End date:</strong>
  <%= @post.end_date %>
</p>

<p>
  <strong>User:</strong>
  <%= @post.user.username %>
</p>

<% if @post.image.url %>
  <p>
    <strong>Image:</strong>
    <% if @post.image %>
      <div class="image_wrapper">
        <%= image_tag(@post.image.url,alt: 'Image') if @post.image.url %>
      </div>
    <% end %>
  </p>
<% end %>

<%= render 'comments/form' %><br>
<%= render 'comments/comment' %>

<br>
<%= link_to 'Edit', edit_post_path(@post), class:"btn btn-info" %>
<%= link_to 'Back', posts_path, class:"btn btn-info" %>
<%= link_to 'Create PDF', post_path(@post, format: :pdf), class:"btn btn-info" %>
